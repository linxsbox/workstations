{
  "include": ["src/**/*", "src/**/*.vue", "src/utils/**/*", "src/hooks/**/*"],
  "exclude": ["src/**/__tests__/*", "node_modules", "dist", "public"],
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "target": "ESNext",
    "module": "ESNext",
    "paths": {
      "@/*": ["./src/*"],
      "utils/*": ["./src/utils/*"],
      "hooks/*": ["./src/hooks/*"],
      "assets/*": ["./src/assets/*"]
    },
    "allowSyntheticDefaultImports": true
  }
}
